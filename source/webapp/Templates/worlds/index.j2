<html>
	<title>
		Worlds
	</title>


	<header>
		<a
			href="/"
		>
			⌂
		</a>
		&gt; Worlds
	</header>

	<body>
		<a
			href="/worlds/new"
		>
			<button>
				+ New World
			</button>
		</a>
		<table
			class="boxed"
		>
			<thead>
				<tr>
					<th>
						Name
					</th>
					<th>
						Version
					</th>
					<th>
						Created
					</th>
					<th>
						Last Played
					</th>
					<th>
						Notes
					</th>
					<th>
						Status
					</th>
					<th>
						Port
					</th>
					<th></th>
				</tr>
			</thead>
			<tbody>
				{% for world in worlds %}
					<tr>
						<td>
							<a
								href="/worlds/{{ world.id }}"
							>
								{{ world.name }}
							</a>
						</td>
						<td>
							{{ world.version.tag }}
						</td>
						<td>
							{{ world.created.strftime("%Y-%m-%d %H:%M:%S") }}
						</td>
						<td>
							{% if world.last_played is not none %}
								{{ world.last_played.strftime("%Y-%m-%d %H:%M:%S") }}
							{% endif %}
						</td>
						<td>
							{{ world.notes }}
						</td>
						<td>
							{{ world.state }}
						</td>
						<td>
							{{ world.port }}
						</td>
						<td>
							<a
								href="/worlds/download/{{ world.id }}"
								download="{{ world.name + "_data.tar.gz"}}"
							>
								⤓
							</a>
						</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>
	</body>
</html>
